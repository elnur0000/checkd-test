{
  "name": "checkd-test",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "ts-node src/server.ts",
    "start:dev": "ts-node-dev src/server.ts --inspect=0.0.0.0:9229",
    "test": "ts-mocha --timeout 10000 \"./tests/**/*.ts\" --exit --retries 2 --recursive --require ./tests/global-hooks.ts",
    "test:dev": "nodemon --ext ts,js --watch ./tests --watch ./src --exec \"ts-mocha --recursive \"./tests/*\" --inspect=0.0.0.0:9229 --require ./tests/global-hooks.ts\"",
    "start:compose": "npm run start:compose:down && docker compose -p 'checkd-test' -f infra/docker-compose.yaml up",
    "start:compose:down": "docker compose -p 'checkd-test' -f infra/docker-compose.yaml down",
    "test:compose:down": "RUN_SCRIPT='npm run test' docker-compose -p 'checkd-tests' -f ./infra/docker-compose.mocha.yaml down",
    "test:compose": "npm run test:compose:down && RUN_SCRIPT='npm run test' docker-compose -p 'checkd-tests' -f ./infra/docker-compose.mocha.yaml up",
    "test:compose:dev": "npm run test:compose:down && RUN_SCRIPT='npm run test:dev' docker-compose -p 'checkd-tests' -f ./infra/docker-compose.mocha.yaml up",
    "lint": "standard --fix"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/chai-as-promised": "^7.1.5",
    "@types/expect": "^24.3.0",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.7.0",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "axios": "^0.27.2",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "dotenv": "^16.0.2",
    "eslint": "^8.21.0",
    "eslint-config-standard-with-typescript": "^22.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.19",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "express-winston": "^4.2.0",
    "helmet": "^6.0.0",
    "joi": "^17.6.0",
    "mysql2": "^2.3.3",
    "sequelize-typescript": "^2.1.3",
    "swagger-ui-express": "^4.5.0",
    "winston": "^3.8.1"
  }
}
