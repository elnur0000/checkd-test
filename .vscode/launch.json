    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker: Attach to Node",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "address": "localhost",
            "localRoot": "${workspaceFolder}/src",
            "remoteRoot": "/home/node/app/src",
            "restart": true,
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ]
          }
    ]
}